<style> 
    body {
    min-height: 100%;  
    padding-top: 40px;
    padding-bottom: 40px;
    background: linear-gradient(315deg, #ffc8c8, #ffc7c8, #ffc4c6, #ffb9c3, #ffa2c3, #ff86ce, #ff74da, #ff6be0, #ff6ae1); 
    color: rgba(76, 249, 3, 0.98);
    font-family: "Single Day";
    font-size: 20px;
    }
    a {
      color: rgba(76, 249, 3, 0.98)
    }

    .avatar-image {
      width: 150px;
      height: 150px;
      object-fit: cover;
      border-radius: 150px;
    }

    .thumbnail {
    width: 130px;
    height: 130px;
    border-radius: 130px;
    object-fit: cover;
    }

    html {
    min-height: 100%
    }

    .item {
    background-color: rgba(192, 63, 164, 0.68);
    border-radius: 1000px;
    padding: 5px;
    padding-right: 53px;
    box-shadow: 4px 4px 10px 0px rgba(122,32,122,0.5);
    }

    .main-container {
      max-width: 640px;
      margin: auto;
    }

    .image-row {
      margin-bottom: 20px;
      text-align: center;
    }

    .name-row {
      margin-bottom: 30px;
      text-align: center;
      font-family: "Single Day";
      font-size: 40px;
      font-weight: 900;
    }

    .social-icons-row {
      margin-bottom: 30px;
      display: flex;
      justify-content: space-around;
    }

    .item {
      margin-bottom: 20px;
      display: flex;
      align-items: center;
    }

    .link-text {
      text-align: center;
      flex-grow: 1
    }
</style>

<div class="main-container">
  <div class= "image-row">
      <img class="avatar-image" src="/IMG_2536.jpg" alt="Leah Park pic">
  </div>

  <div class="name-row">
    Leah Park
  </div>

  <div class="social-icons-row">
    <a class="link-text" href="https://www.linkedin.com/in/leahjpark/" target="_blank">
      <i class="fa-brands fa-linkedin"></i>
        
    </a>

    <a class="link-text" href="https://beliapp.co/app/leahpark76" target="_blank">
      <i class="fa-solid fa-utensils"></i>
    </a>

    <a class="link-text" href="https://www.instagram.com/_hiimleah/" target="_blank">
      <i class="fa-brands fa-instagram"></i>
    </a>
  </div>

  <div class="links-row">
    <% @list_of_items.each do |the_item| %>
       <div class="item">
         <img src="<%= the_item.thumbnail_url %>" class="thumbnail">
 
         <a class="link-text" target="_blank" href="<%= the_item.link_url %>">
           <%= the_item.link_description %>
         </a>
       </div>
     <% end %>     
  </div>
</div>
